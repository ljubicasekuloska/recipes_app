<div class="container">
   <div class="columns is-multiline">
     <div class="column is-6 is-offset-3">
       <div class="content is-size-3">
         <h1><%= heading %></h1>
       </div>
     </div>

     <% if instruction.errors.any? %>
       <div class="column is-6 is-offset-3">
         <article class="message is-danger">
           <div class="message-body">
             <p><%= pluralize(instruction.errors.count, "error") %> prohibited this instruction from being saved:</p>
             <br>
             <p>
             <% instruction.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>
             </p>
           </div>
         </article>
       </div>
     <% end %>

    <div class="column is-6 is-offset-3">
      <%= form_with model: [recipe, instruction], local: true do |form| %>
        <div class="content is-size-4">
          Instructions:
        </div>
        <div class="field">
          <%= form.label " ", class: "label" %>
            <div class="control">
              <%= form.text_field :direction, class: "input", placeholder: "Add instruction" %>
            </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= form.submit submit, class: "button is-link" %>
          </div>
          <div class="control">
            <%= link_to "Cancel", recipe_path(recipe), class: 'button is-link is-light' %>
          </div>
          <div class="control">
          <% if local_assigns[:show]  %>
            <%= link_to "Delete", recipe_instruction_path(instruction.recipe, instruction), method: :delete,
                    data: { confirm: "Are you sure you want to delete this instruction?" },
                    class: "button is-link is-light" %>
          <% end %>
        </div>
      <% end %>
    </div>
