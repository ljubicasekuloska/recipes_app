<div class="container is-font-index">
   <div class="columns is-multiline">
     <div class="column is-6 is-offset-3">
       <div class="content is-size-4">
         <h1><%= heading %></h1>
       </div>
     </div>

     <% if ingridient.errors.any? %>
       <div class="column is-6 is-offset-3">
         <article class="message is-danger">
           <div class="message-body">
             <p><%= pluralize(ingridient.errors.count, "error") %> prohibited this ingridient from being saved:</p>
             <br>
             <p>
             <% ingridient.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>
             </p>
           </div>
         </article>
       </div>
     <% end %>

    <div class="column is-6 is-offset-3">
      <%= form_with model: [recipe, ingridient], local: true do |form| %>
        <div class="content is-size-4">
          Ingridients:
        </div>
        <div class="field">
          <%= form.label " ", class: "label" %>
            <div class="control">
              <%= form.text_field :content, class: "input", placeholder: "Add ingridient" %>
            </div>
        </div>

        <div class="field is-grouped">
          <div class="control">
            <%= form.submit submit, class: "button is-link" %>
          </div>
          <div class="control">
            <%= link_to "Cancel", recipe_path(recipe), class: 'button is-link is-light' %>
          </div>
          <div class="control">
          <% if local_assigns[:show]  %>
            <%= link_to "Delete", recipe_ingridient_path(ingridient.recipe, ingridient), method: :delete,
                    data: { confirm: "Are you sure you want to delete this ingridient?" },
                    class: "button is-link is-light"%>
          <% end %>
        </div>
      <% end %>
    </div>
