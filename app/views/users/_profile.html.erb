<section class="section">
  <div class="container is-font-index">
    <div class="columns is-multiline">
      <div class="column is-full">
        <p class="title is-5">Username:</p>
        <p class="subtitle is-5">
          <%= @user.handle %>
        </p>
      </div>
      <div class="column is-full">
        <p class="title is-5">Email:</p>
        <p class="subtitle is-5">
          <%= @user.email %>
        </p>
      </div>
      <div class="column is-full">
        <p class="title is-5">Name:</p>
        <p class="subtitle is-5">
          <%= @user.first_name + " " + @user.last_name %>
        </p>
        <br>
      </div>
      <div class="column is-full">
        <p class="title is-3">User recipes:</p>
        <% @user.recipes.each do |recipe| %>
          <div class="column is-half">
            <div class="box">
              <article class="media">
                <div class="media-content">
                  <div class="content">
                    <p class="title is-5"><%= recipe.title %></p>
                    <p class="subtitle is-6"><%= recipe.description %></p>
                    <% if local_assigns[:show] %>
                      <%= link_to "Back", root_path %>
                    <% end %>
                    <% if logged_in? %>
                      <%= link_to "Show", recipe_path(recipe), class: 'button is-small is-rounded is-link' %>
                      <% end %>
                    <% if logged_in? && equal_with_current_user?(recipe.user) %>
                        <%= link_to "Edit", edit_recipe_path(recipe), class: 'button is-small is-rounded is-link' %>
                      <% end %>
                    <% if logged_in? && equal_with_current_user?(recipe.user) %>
                        <%= link_to "Delete", recipe_path(recipe), method: :delete,
                            data: { confirm: "Are you sure you want to delete this recipe?" },
                            class: 'button is-small is-rounded is-link' %>
                    <% end %>
                  </div>
                </div>
              </article>
            </div>
          </div>
        <% end %>
      </div>
  </div>
</section>